{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "USERNAME",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "USERNAME"
        }
    },
    "workspaceFolder": "/home/ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/ws,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "containerEnv": {
        "WAYLAND_DISPLAY": "${env:WAYLAND_DISPLAY}",
        "XDG_RUNTIME_DIR": "/tmp",
        "ROS_LOCALHOST_ONLY": "1",
        "ROS_DOMAIN_ID": "42"
    },
    "runArgs": [
        "--net=host",
        "--security-opt=seccomp=unconfined"
    ],
    "mounts": [
        "source=${env:XDG_RUNTIME_DIR}/${env:WAYLAND_DISPLAY},target=/tmp/${env:WAYLAND_DISPLAY},type=bind",
        "source=${env:XDG_RUNTIME_DIR}/pulse,target=/tmp/pulse,type=bind"
    ],
"postCreateCommand": "sudo rosdep update && cd /home/ws && sudo rosdep install --from-paths src --ignore-src -y && sudo chown -R USERNAME /home/ws/"}